<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.services.mapper.EnvMapper">

    <resultMap id="envResult" type="Env">
        <id column="id" property="id"/>
        <result column="label" property="label"/>
    </resultMap>

    <insert
            id="addEnv"
            useGeneratedKeys="true"
            keyProperty="id"
    >
        INSERT INTO env
            (label)
        VALUES
            (#{label})
    </insert>

    <delete id="deleteEnvById" parameterType="java.lang.Integer">
        DELETE
        FROM
            env
        WHERE
            id = #{id}
    </delete>

    <delete id="deleteDemoByIds" parameterType="java.util.List">
        DELETE
        FROM
        env
        WHERE
        id IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <update id="updateEnv" parameterType="Env">
        UPDATE
            env
        SET
            label = #{label}
        WHERE id = #{id}
    </update>

    <select id="getAllEnv" resultMap="envResult">
        SELECT
            *
        FROM
            env
    </select>

    <select id="getEnvByPage" resultMap="envResult">
        SELECT
        *
        FROM
        env
        WHERE
        1 = 1
        <if test="queryCondition != null and queryCondition != ''">
            AND name LIKE CONCAT(#{page.queryCondition}, '%')
        </if>
        LIMIT #{offset} OFFSET #{pageSize}
    </select>

    <select id="getEnvById" resultMap="envResult">
        SELECT
            *
        FROM
            env
        WHERE
            id = #{id}
    </select>

    <select id="getTotal" resultType="java.lang.Integer">
        SELECT
            COUNT(*)
        FROM
            env
    </select>

</mapper>